{
    "name": "graphql-api",
    "version": "1.0.0",
    "directories": {
        "functions": "lambda/functions"
    },
    "scripts": {
        "test": "cd lambda/functions/graphql-server && mocha",
        "compile": "cd lambda/functions/graphql-server && tsc",
        "watch": "cd lambda/functions/graphql-server && tsc -w --preserveWatchOutput",
        "dev": "npm run sam:remove-build && npm run sam:start-api",
		"build": "npm run compile && npm run sam:remove-build && npm run sam:build",
		"deploy": "npm run sam:deploy",
		"sam:deploy": "cd lambda && 'C:\\Program Files\\Amazon\\AWSSAMCLI\\bin\\sam.cmd' deploy",
		"sam:build": "cd lambda && 'C:\\Program Files\\Amazon\\AWSSAMCLI\\bin\\sam.cmd' build",
        "sam:remove-build": "cd lambda && rm -rf .aws-sam",
        "sam:start-api": "cd lambda && 'C:\\Program Files\\Amazon\\AWSSAMCLI\\bin\\sam.cmd' local start-api -n ./functions/graphql-server/.env.dev.json --warm-containers EAGER"
    },
    "repository": {
        "type": "git",
